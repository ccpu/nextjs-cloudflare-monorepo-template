{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "postbuild": "next-sitemap",
    "sitemap": "next-sitemap",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "next dev --turbopack",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "lint": "eslint",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "db:generate": "drizzle-kit generate",
    "db:migrate:locale": "pnpm wrangler d1 migrations apply page-visits",
    "db:migrate:remote": "pnpm wrangler d1 migrations apply page-visits --remote",
    "prepare": "husky"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@internal/ui": "workspace:*",
    "@internal/utils": "workspace:*",
    "@opennextjs/cloudflare": "^1.6.5",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "next": "15.5.0",
    "next-themes": "^0.4.6",
    "react": "catalog:prod",
    "react-dom": "catalog:prod",
    "tailwindcss-animated": "^2.0.0",
    "zod": "catalog:prod"
  },
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@internal/prettier-config": "workspace:*",
    "@internal/tsconfig": "workspace:*",
    "@internal/vitest-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "catalog:dev",
    "@types/react": "catalog:dev",
    "@types/react-dom": "catalog:dev",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "jiti": "^2.5.1",
    "next-sitemap": "^4.2.3",
    "prettier": "catalog:dev",
    "tailwindcss": "catalog:dev",
    "typescript": "catalog:dev",
    "wrangler": "^4.34.0"
  }
}
